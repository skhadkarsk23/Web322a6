<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Set - Lego Collection</title>
    <link href="/css/main.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    </script>
  </head>
  <body class="bg-base-100 text-base-content">
    <!-- Navbar -->
    <%- include('partials/navbar', { page: '' }) %>

    <!-- Hero Section -->
    <div class="hero bg-base-200 py-8 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set</h1>
          <p class="py-4 text-lg">
            Update the details of your Lego set using the form below.
          </p>
        </div>
      </div>
    </div>

    <!-- Form Section -->
    <div class="container mx-auto px-4">
      <form
        action="/lego/editSet"
        method="POST"
        class="max-w-lg mx-auto bg-base-200 p-6 rounded-lg shadow-lg"

      >
        <!-- Hidden Set Number -->
        <input type="hidden" name="set_num" value="<%= set.set_num %>" />

        <!-- Set Name -->
        <div class="form-control mb-4">
          <label for="name" class="label">
            <span class="label-text font-medium">Set Name</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="input input-bordered w-full"
            value="<%= set.name %>"
            required
          />
        </div>

        <!-- Set Year -->
        <div class="form-control mb-4">
          <label for="year" class="label">
            <span class="label-text font-medium">Year</span>
          </label>
          <input
            type="number"
            id="year"
            name="year"
            class="input input-bordered w-full"
            value="<%= set.year %>"
            required
          />
        </div>

        <!-- Number of Parts -->
        <div class="form-control mb-4">
          <label for="num_parts" class="label">
            <span class="label-text font-medium">Number of Parts</span>
          </label>
          <input
            type="number"
            id="num_parts"
            name="num_parts"
            class="input input-bordered w-full"
            value="<%= set.num_parts %>"
            required
          />
        </div>

        <!-- Theme Selection -->
        <div class="form-control mb-4">
          <label for="theme_id" class="label">
            <span class="label-text font-medium">Theme</span>
          </label>
          <select
            id="theme_id"
            name="theme_id"
            class="select select-bordered w-full"
            required
          >
            <% themes.forEach((theme) => { %>
              <option
                value="<%= theme.id %>"
                <%= set.theme_id == theme.id ? "selected" : "" %>
              >
                <%= theme.name %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Submit Button -->
        <div class="form-control mt-6">
          <button type="submit" class="btn btn-primary w-full">Update Set</button>
        </div>
      </form>

      <!-- Go Back Button -->
      <div class="text-center mt-6">
        <a
          href="#"
          onclick="history.back(); return false;"
          class="btn btn-secondary"
        >
          Go Back
        </a>
      </div>
    </div>
  </body>
</html>